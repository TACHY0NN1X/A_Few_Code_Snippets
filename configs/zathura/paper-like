# Paper-like theme for Zathura
set window-title-basename "true"
set selection-clipboard "clipboard"

# Base colors
set default-bg                  "#F7D479"
set default-fg                  "#683816"

# Notification colors
set notification-bg             "#F7D479"
set notification-fg             "#683816"
set notification-error-bg       "#FF5555"       # Keep red for errors
set notification-error-fg       "#FFFFFF"
set notification-warning-bg     "#FFB86C"       # Warm orange warning
set notification-warning-fg     "#683816"

# Completion colors
set completion-bg               "#F7D479"
set completion-fg               "#8B5E3C"       # Slightly lighter brown
set completion-group-bg         "#F7D479"
set completion-group-fg         "#8B5E3C"
set completion-highlight-bg     "#E6C260"       # Highlighted background
set completion-highlight-fg     "#683816"

# Index (TOC) colors
set index-bg                    "#F7D479"
set index-fg                    "#683816"
set index-active-bg             "#E6C260"
set index-active-fg             "#683816"

# Input bar & status bar
set inputbar-bg                 "#F7D479"
set inputbar-fg                 "#683816"
set statusbar-bg                "#F7D479"
set statusbar-fg                "#683816"

# Highlight colors (search results)
set highlight-color             "#FFD70080"     # Gold with transparency
set highlight-active-color      "#FFA50080"     # Orange with transparency

# Loading indicator
set render-loading              true
set render-loading-bg           "#F7D479"
set render-loading-fg           "#683816"

# Recolor mode (for inverting or adapting PDFs)
set recolor true
set recolor-lightcolor          "#F7D479"
set recolor-darkcolor           "#683816"

# Startup options
set adjust-open width
